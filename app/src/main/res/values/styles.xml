<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/null_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/minHeight</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/paddingHorizontal_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_24</item>
        <item name="navigationIconTint">?attr/colorControlNormal</item>
    </style>
    <style name="TextViewSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLength">255</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/editTextColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:drawableStart">@drawable/ic_search_24</item>
        <item name="android:drawableTint">?attr/editTextColor</item>
        <item name="android:drawablePadding">@dimen/small_radius</item>
        <item name="android:background">@drawable/text_view_shape</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
    </style>
    <style name="TrackViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:gravity">left</item>
    </style>
</resources>